					{%- if blog.all_tags.size > 0 -%}
						{%- for tag in blog.all_tags -%}
                            {% assign arrTags = arrTags | append:tag | append:"," %}
						{%- endfor -%}
					{%- endif -%}
                  {% endfor %}
                  
                  {% assign tgArr = arrTags | split:"," | uniq%}
                  {% for tg in tgArr %}
                    {%- if current_tags contains tg -%}
                        <li class="blog-tag"><span>{{ tg }}</span></li>
                    {%- else -%}
                        <li class="blog-tag">{{ tg | link_to_tag: tg }}</li>
                    {%- endif -%}
                  {% endfor %}
